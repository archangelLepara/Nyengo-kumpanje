<script>

let WEATHER={

Blantyre:{temp:29,risk:"SAFE"},
Lilongwe:{temp:32,risk:"HEAT"},
Mzuzu:{temp:24,risk:"SAFE"},
Zomba:{temp:26,risk:"FLOOD"},
Kasungu:{temp:30,risk:"WARNING"}

};

function login(){

let n=name.value;
let p=password.value;

if(n==""||p==""){

alert("Enter name and password");
return;

}

loginPage.classList.add("hidden");
home.classList.remove("hidden");

}

function openTcheru(){

home.classList.add("hidden");
tcheru.classList.remove("hidden");

}

function openMlimi(){

home.classList.add("hidden");
mlimi.classList.remove("hidden");

}

function back(){

home.classList.remove("hidden");
tcheru.classList.add("hidden");
mlimi.classList.add("hidden");

}

function checkWeather(){

let c=city.value;

let w=WEATHER[c];

let msg="";

if(w.risk=="SAFE"){

msg=`<div class="safe">
Temperature: ${w.temp}째C<br>
Safe conditions
</div>`;

}

else if(w.risk=="HEAT"){

msg=`<div class="warn">
Temperature: ${w.temp}째C<br>
Heat warning
</div>`;

}

else if(w.risk=="FLOOD"){

msg=`<div class="danger">
Temperature: ${w.temp}째C<br>
Flood risk. Move to safe area.
</div>`;

}

else{

msg=`<div class="warn">
Temperature: ${w.temp}째C<br>
Weather warning
</div>`;

}

weatherResult.innerHTML=msg;

}

function cropAdvice(crop){

let c=city.value||"Blantyre";

let w=WEATHER[c];

let text="";

if(w.risk=="FLOOD"){

text="Flood risk. Delay planting.";

}

else if(w.risk=="HEAT"){

text="Heat risk. Irrigate frequently.";

}

else{

text="Good conditions. Safe to plant.";

}

advice.innerHTML=`
<div class="safe">
<b>${crop}</b><br>
${text}
</div>
`;

}

</script>

